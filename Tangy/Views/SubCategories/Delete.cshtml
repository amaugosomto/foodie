@model Tangy.Models.SubCategory
@{
    ViewData["Title"] = "Details";
}
<br />
<h1>Subcategory Delete</h1>
<br />

<form method="post" asp-action="Delete">
    <div class="form-border">
        <input type="hidden" asp-for="Id"/>
        <fieldset disabled>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Name" class="custom-control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Category.Name" class="custom-control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Category.Name" class="form-control" />
                </div>
            </div>
        </fieldset>
        <br />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" asp-route-id="@Model.Id" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
